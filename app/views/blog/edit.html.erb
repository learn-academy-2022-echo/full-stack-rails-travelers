<h1>Edit a Blog Post:</h1>
<br>
<br>

<%= form_with model: @blog do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
<br>
<br>
    <%= form.label :content %>
    <%= form.text_field :content %>
<br>
<br>
    <%= form.submit 'Edit Blog Post' %>
    
<% end %>
<br>
<br>
<%= link_to 'Back to Home', blogs_path %>