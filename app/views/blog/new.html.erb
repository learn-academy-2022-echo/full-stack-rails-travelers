<h1>Add a New Blog Post:</h1>

<%= form_with model: @blog do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
<br>
<br>
    <%= form.label :content %>
    <%= form.text_field :content %>
<br>
<br>
    <%= form.submit 'Create Post' %>
    
<% end %>
<br>
<br>
<%= link_to 'Back to Home', '/blogs' %>